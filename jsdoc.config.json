{
  "source": {
    "includePattern": ".+\\.js(doc|x)?$",
    "include": [
      "pkg"
    ],
    "exclude": [
      "node_modules/|docs"
    ]
  },
  "plugins": [
    "plugins/markdown"
  ],
  "template": {
    "cleverLinks": true,
    "monospaceLinks": true
  },
  "recurseDepth": 10,
  "opts": {
    "destination": "./docs/",
    "recurse": true,
    "template": "doc-template"
  }
}